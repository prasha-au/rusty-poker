{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2023", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "allowImportingTsExtensions": true
  }
}